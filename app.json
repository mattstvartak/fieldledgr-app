{
  "expo": {
    "name": "FieldLedgr",
    "slug": "fieldledgr",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "fieldledgrapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "FieldLedgr uses your location to record GPS coordinates when you clock in/out.",
        "NSCameraUsageDescription": "FieldLedgr uses your camera to take jobsite photos.",
        "NSPhotoLibraryUsageDescription": "FieldLedgr accesses your photo library to attach images to jobs.",
        "NSSpeechRecognitionUsageDescription": "FieldLedgr uses speech recognition for voice-to-text notes."
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#2A9D6E",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "CAMERA"
      ]
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      "expo-location",
      "expo-camera",
      "expo-image-picker",
      "expo-notifications",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 320,
          "resizeMode": "contain",
          "backgroundColor": "#2A9D6E",
          "dark": {
            "backgroundColor": "#1D7A52"
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "828430c4-6109-4c07-b7d8-8f8a90962010"
      }
    },
    "owner": "fieldledgr"
  }
}
